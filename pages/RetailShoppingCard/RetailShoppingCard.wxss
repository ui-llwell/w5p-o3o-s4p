/* pages/RetailShoppingCard/RetailShoppingCard.wxss */
page{
  height: 100%;
  background: #242a34;
}
.wrap{
  width: 660rpx;
  height: 1055rpx;
  position: absolute;
  top: 0;
  bottom: 100rpx;
  left: 0;
  right: 0;
  margin: auto;
}
.content{
  height: 1055rpx;
  background: #fff;
}
.shoppingCardTitle{
  height: 88rpx;
  line-height: 88rpx;
  background: #F7F7F9;
  text-align: center;
}
.shoppingCardContext{
  height: 967rpx;
}


.i-swipeout-wrap{
  padding: 20rpx 40rpx;
  display: flex;
  border-bottom:1px solid #E3E9EC;
}
.unit .i-swipeout-demo-item{
  border-bottom: 1px solid #E3E9EC;
  background:transparent;
}
.unit .i-swipeout-demo-item>view{
  padding-bottom: 16rpx;
  padding-right: 10rpx;
}

.i-swipeout-wrap-center{
  flex: 2;
  width: 100rpx;
  height: 100rpx;
  
}
.i-swipeout-wrap-right{
  font-size: 24rpx;
  color: #878787;
  margin-left: 20rpx;
  flex: 5;
}
.goodsName{
  color: #5E5E5E;
  width: 460rpx;
  font-size: 28rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.goodsNum{
  font-size: 28rpx;
}

