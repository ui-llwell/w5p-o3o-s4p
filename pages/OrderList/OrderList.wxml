<view class='body'>
<!-- 选项卡 -->
  <view class="page">
      <view class="page__bd">
          <view class="weui-tab">
              <view class="weui-navbar">
                  <block wx:for-items="{{tabs}}" wx:key="{{index}}">
                      <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                          <view class="weui-navbar__title">{{item}}</view>
                      </view>
                  </block>
                  <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
              </view>
              <view class="weui-tab__panel">
              <!-- *******待付款****** -->
                  <view class="weui-tab__content" hidden="{{activeIndex != 0}}">

                    <view class='content' wx:for="{{All.cons}}" wx:key="{{index}}">
                      <view class='con_title'>{{item.text1}}</view>
                      <view class='line'></view>
                      <view class='con_main'>
                        <view class='con_main_list' wx:for="{{All.cons[0].list}}" wx:key="{{index}}">
                          <view class='con_main_list_left fl'>
                            <image src='{{item.img}}'></image>
                          </view>
                          <view class='con_main_list_center fl'>
                            <text>{{item.title}}</text>
                          </view>
                          <view class='con_main_list_right fl'>
                            <text>¥{{item.money}}</text>
                          </view>
                        </view>
                      </view>
                      <view class='con_total'>
                        共{{item.text2}}件商品 合计：¥{{item.text2}}（含运费 ¥{{item.text3}}）
                      </view>
                      <view class='line'></view>
                      <view class='con_all'>
                        <text class='hot' bindtap='details'>{{item.text4}}</text>
                        <text class='hot color'>{{item.text5}}</text>
                      </view>
                    </view>

                  </view>
              <!-- *******已付款****** -->    
                  <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
              <!-- *******已发货****** -->    
                  <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>
              <!-- *******已完成****** -->    
                  <view class="weui-tab__content" hidden="{{activeIndex != 3}}">选项4的内容</view>
              </view>
          </view>
      </view>
  </view>
  <view class='footer'>
    <image src='{{All.logo.log}}'></image>
  </view>
</view>
<!-- 选项卡 -->