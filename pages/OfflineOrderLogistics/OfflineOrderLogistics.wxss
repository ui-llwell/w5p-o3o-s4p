/* pages/OfflineOrderLogistics/OfflineOrderLogistics.wxss */
.logistics_wrap{
  width: 100%;
  height: 100%;
}
.courierNumber{
  padding:10rpx;
  font-size:30rpx;
  width:95%;
  height:50rpx;
  background:#f2f2f2;
  margin:10rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  color: #555;
}
.logistics_list{
  margin: 20rpx;
  border-left: 1px solid #ccc;
}
.logistics_list::before{
  position: absolute;
  left: 15rpx;

     content: "";
     display: inline-block;
     height: 4rpx;
     width: 4rpx;
     border-width: 6rpx;
     border-radius: 6rpx;
     border-color: #ff0000;
     border-style: solid;
      transform: matrix(0.5,0.5,-0.5,0.5,0,0); 

}
.logistics_list_li{
  padding: 4% 4%;
   border-bottom: 1px dashed #ccc; 
  /* background: red; */
}
.logistics_list_li_status{
  font-size: 26rpx;
  color: #777;
  /* border-bottom: 1rpx solid #f2f2f2;  */
}
.logistics_list_li_time{
  font-size: 26rpx;
  color: #777;
  margin-top: 15rpx;
}
